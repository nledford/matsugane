#appContainer {
    layout: grid;
    grid-size: 2 4;
    grid-gutter: 1;
    grid-rows: 1 2 11 11;
    margin-left: 1;
    margin-right: 1;
}

LastRefresh {
    height: 1;
    column-span: 2;
}

StatsHeader {
    column-span: 2;
    height: 2;
    background: blue;
    color: white;
    width: 100%;
}

.stats-cell-header {
    background: navy;
    padding-left: 1;
    text-style: bold;
    width: 50%;
}

.stats-cell {
    margin-left: 1;
    width: 50%;
}

RecentPlays {
    column-span: 2;
}

RecentPlays Label {
    color: white;
    text-style: bold;
}

TopArtists Label {
    color: white;
    text-style: bold;
}